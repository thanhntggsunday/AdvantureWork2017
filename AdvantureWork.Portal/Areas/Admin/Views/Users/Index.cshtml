@using AdvantureWork.Common.ViewModel;
@using  AdvantureWork.Common.DTO;

@model DataTableViewModel<AppUserDTO>

@{
    ViewBag.Title = "Index";

}

<h2 class="m-0 text-dark col-md-11 offset-md-1">    Users Management    </h2>

<div class="container-fluid">
    <div class="row">
        <div id="div-btn-add-emp" class="col-sm-12 col-md-1 col-lg-1" float-left
             style="padding-bottom: 20px;float: right; display:flex; justify-content:flex-end;">
            <button type="button" id="btnAddEmp" class="btn w-100 btn-info" style="float: right;">
                <b>Create</b>
                <i class="fas fa-plus-circle"></i>
            </button>
        </div>
    </div>



    <div class="row">
        <div class="col-12">

            <div class="card">

                <!-- /.card-header -->
                <div class="card-body">
                    <table id="tbl_users" class="table table-bordered table-striped" width="100%">
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
<!-- Modal -->
<div class="modal fade" id="user_modal" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">User</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <label value="000" id="edit-flag"></label>
            <div class="col-md-12">
                <span id="msg-error"></span>
            </div>

            <div class="modal-body">

                <form class="userform">
                    <input type="text" name="id" disabled class="form-control d-none" id="id">

                    <div class="form-group">
                        <label>Email:</label><br>
                        <input type="text" name="email" class="form-control" id="email" placeholder="Email" required="required">
                    </div>
                    <div class="form-group">
                        <label>Full name:</label><br>
                        <input type="text" name="full_name" class="form-control" id="full_name" placeholder="Full name" required="required">
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label>User name:</label><br>
                            <input type="text" name="user_name" class="form-control" id="user_name" placeholder="Username">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            <label>Password:</label><br>
                            <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            <label>Address:</label><br>
                            <input type="text" name="address" class="form-control" id="address" placeholder="Address">

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">

                            <a href="#" id="showLookup">Lookup</a>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="form-group">
                            <label>Country:</label><br>
                            <input type="text" name="country" class="form-control" id="country" disabled>

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="form-group">
                            <label>CountryRegion Code:</label><br>
                            <input type="text" name="country-region-code" class="form-control" id="country-region-code" disabled>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            <label>Avatar:</label><br>
                            <input type="text" name="avatar" class="form-control" id="avatar" placeholder="Avatar">
                        </div>
                        <div class="form-group">
                            <input type="file" id="imageUploadForm" name="image" multiple="multiple" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            <label>BirthDay:</label><br>
                            <input type="date" name="birth_day" class="form-control" id="birth_day" placeholder="Birthday">
                        </div>
                    </div>

                    @*<div class="form-group">
                            <div class="form-group">
                                <label>Status:</label><br>
                                <input type="text" name="status" class="form-control" id="status" placeholder="Status">
                            </div>
                        </div>*@

                    @*<div class="form-group">
                            <div class="form-group">
                                <label>Gender:</label><br>
                                <input type="text" name="gender" class="form-control" id="gender" placeholder="Gender">
                            </div>
                        </div>*@

                    <div class="form-group">
                        <div class="form-group col-md-12">
                            <label>Status:</label><br>
                            <label>Active</label>
                            <input id="active" name="status" value="True" checked type="radio">
                            <label>In-Active</label>
                            <input id="in-active" name="status" value="False" type="radio">

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group col-md-12">
                            <label>Gender:</label><br>
                            <label>Male</label>
                            <input id="male" name="gender" value="True" checked type="radio">
                            <label>Female</label>
                            <input id="female" name="gender" value="False" type="radio">

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            <label>Phone Number:</label><br>
                            <input type="text" name="phone_number" class="form-control" id="phone_number" placeholder="Phone number">
                        </div>
                    </div>


                 

                </form>

            </div>


        </div>

    </div>
</div>


<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>



@section Scripts{

    <script src="~/admin/js/user.js"></script>


}



