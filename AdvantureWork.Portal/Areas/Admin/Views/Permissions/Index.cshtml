@model AdvantureWork.Common.ViewModel.System.Permissions.PermissionViewModel

@{
    ViewBag.Title = "Index";

}

<link href="~/admin/lib/Drop-Down-Combo-Tree/style.css" rel="stylesheet" />

<h2 class="m-0 text-dark col-md-11 offset-md-1">    Permission Management    </h2>

<div class="container-fluid">
    <div class="row">
        <div id="div-btn-add-emp" class="col-sm-12 col-md-1 col-lg-1" float-left
             style="padding-bottom: 20px;float: right; display:flex; justify-content:flex-end;">
            <button type="button" id="btnAssignPermission" class="btn w-100 btn-info" style="float: right;"
                    data-toggle="modal"
                    data-target="#modal-lg-assign-role">
                <b>Assign</b>
                <i class="fas fa-plus-circle"></i>
            </button>
        </div>
    </div>



    <div class="row">
        <div class="col-12">

            <div class="card">

                <!-- /.card-header -->
                <div class="card-body">
                    <table id="tbl_permission" class="table table-bordered table-striped" width="100%">
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
<!-- Modal -->


<div class="modal fade" id="modal-lg-assign-role">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form class="needs-validation container" id="form-add-edit-role" action="" novalidate>
                <div class="modal-header">
                    <h4 class="modal-title" id="modal-title-id">Assign permission</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <!-- <p>One fine body&hellip;</p> -->
                    <label value="000" id="edit-flag"></label>

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="col-md-12">


                                        <div class="form-group">
                                            <label>
                                                Roles
                                            </label>

                                            <div class="row">

                                                <div class="col-lg-12" id="div-members">

                                                    <input type="text" id="roles-id" class="col-md-12" placeholder="Select" />
                                                </div>

                                                <!-- </div> -->
                                                <div class="col-md-12">
                                                    <span id="msg-role"></span>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>
                                                Function
                                            </label>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <select id="ddlFunctions"></select>
                                                </div>

                                                <div class="col-md-12">
                                                    <span id="msg-function"></span>
                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                    <div class="col-md-12">

                                        <!-- /.form-group -->
                                        <div class="form-group">
                                            <label>
                                                Action
                                            </label>

                                            <div class="row">


                                                <div class="col-sm-12">

                                                    <!-- <div id="roles"></div> -->

                                                    <table id="level-permission-assign" style="width:100%"></table>
                                                    <span id="msg-levelper"></span>
                                                </div>

                                            </div>
                                        </div>

                                    </div>


                                </div>

                            </div>
                        </div>
                        <!-- </form> -->
                    </div>
                </div>
                <!-- /.tab-content -->
                <!-- /.card-body -->


                <div class="modal-footer justify-content-between">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-4"></div>
                            <div class="col-md-2" style="padding-bottom: 20px;">
                                <button type="button" class="btn btn-danger btn-block" id="closeAssignModal"
                                        data-dismiss="modal">
                                    Close
                                </button>
                            </div>
                            <div class="col-md-2">
                                <button type="button" id="saveAssignPermission" class="btn btn-primary btn-block">
                                    Save
                                </button>
                            </div>

                            <div class="col-md-4"></div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>


@section Scripts{

    <script src="~/admin/lib/Drop-Down-Combo-Tree/icontains.js"></script>
    <script src="~/admin/lib/Drop-Down-Combo-Tree/comboTreePlugin.js"></script>
    <script src="~/admin/js/permission.js"></script>
    <script src="~/admin/js/permission_assign.js"></script>

}



